@{
    ViewBag.Title = "Add New Film";
}

@model assignment3.Models.Films

<div class="text-center">
    <h1>Add a new favorite film to the list!</h1>
    <form asp-action="AddFilm" method="post">
        <div form-group>
            <small class="form-text text-muted">* = Required</small>
            <label asp-for="category">*Category:</label>
            <select asp-for="category" class="form-control">
                <option value="">Select</option>
                <option value="Action/Adventure">Action/Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Family">Family</option>
                <option value="Horror/Suspense">Horror/Suspense</option>
                <option value="Television">Television</option>
                <option value="VHS">VHS</option>
                <option value="Miscellaneous">Miscellaneous</option>
            </select>
            <span asp-validation-for="category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="title">*Title:</label>
            <input asp-for="title" class="form-control" type="text" />
            <span asp-validation-for="title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="year">*Year:</label>
            <input asp-for="year" class="form-control" type="number" />
            <span asp-validation-for="year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="director">*Director:</label>
            <input asp-for="director" class="form-control" type="text" />
            <span asp-validation-for="director" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="rating">*Rating:</label>
            <select asp-for="rating" class="form-control">
                <option value="">Select</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
                <option value="TV-Y7">TV-Y7</option>
                <option value="TV-PG">TV-PG</option>
                <option value="TV-14">TV-14</option>
                <option value="TV-MA">TV-MA</option>
                <option value="NR">NR</option>
            </select>
            <span asp-validation-for="rating" class="text-danger"></span>
        </div>
        <div class="form-group edit">
            <label asp-for="edited" class="form-check-label edit-label">Edited?</label>
            <input asp-for="edited" class="form-check-input" type="checkbox" unchecked />
            <span asp-validation-for="edited" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="lent">Lent To:</label>
            <input asp-for="lent" class="form-control" type="text" />
            <span asp-validation-for="lent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="notes">Notes:</label>
            <textarea asp-for="notes" class="form-control" maxlength="25"></textarea>
            <span asp-validation-for="notes" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn submit form-control" />
        </div>

    </form>
</div>

